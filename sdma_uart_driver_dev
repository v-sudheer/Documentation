                vuart: serial@1e787000 {
                        compatible = "aspeed,ast2500-vuart";
                        reg = <0x1e787000 0x40>;
                        reg-shift = <2>;
                        interrupts = <8>;
                        clocks = <&syscon ASPEED_CLK_APB>;
                        no-loopback-test;
                        port_address = <0x3f8>;
                        serial_irq = <4>;
                };

                ast_uart_sdma: uart_sdma@1e79e000 {
                        compatible = "aspeed,ast-uart-sdma";
                        reg = <0x1e79e000 0x400>;
                        interrupts = <50>;
                        status = "disabled";
                };

                dma_uart0: dma_uart0@1e78e000{

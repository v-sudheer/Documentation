arch/arm/boot/dts/ast2500_evb.dts

/ {
        model = "AST2500 EVB";
        compatible = "aspeed,ast2500-evb", "aspeed,ast2500";

        aliases {
                serial0 = &uart0;
                serial1 = &uart3;
                serial2 = &uart4;
                serial3 = &vuart;

        };

        chosen {
                bootargs = "console=ttyS0,115200 root=/dev/ram rw init=/linuxrc";
        };

};



&dma_uart0 {
        status = "okay";
};

